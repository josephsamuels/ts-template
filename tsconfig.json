{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "sourceMap": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "target": "ES5",
        "typeRoots": [
            "node_modules/@types",
            "typings"
        ]
    },
    "include": [
        "src/**/*.ts"
    ]
}